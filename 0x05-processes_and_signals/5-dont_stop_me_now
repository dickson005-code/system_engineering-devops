#!/usr/bin/env bash
# This script finds and kills the 4-to_infinity_and_beyond process

# Find the PID of the process
pid=$(pgrep -f "4-to_infinity_and_beyond")

# Check if PID exists
if [ -z "$pid" ]; then
    echo "No running 4-to_infinity_and_beyond process found."
else
    # Kill the process
    kill "$pid"
    echo "Process 4-to_infinity_and_beyond with PID $pid has been terminated."
fi
